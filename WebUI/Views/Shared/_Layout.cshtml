@{
  Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sınav Oluşturucu</title>

  <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
</head>

<body>

  <header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sınav Oluşturucu</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#layout-navbar"
          aria-controls="layout-navbar" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="layout-navbar">
          <ul class="navbar-nav me-auto mb-2 mb-md-0">
            <li class="nav-item">
              <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <div class="container-fluid">
    <main role="main">
      @RenderBody()
    </main>
  </div>

  <div class="container-fluid border-top" style="position:fixed; bottom:0px;">
    <footer class="py-1">
      <ul class="nav justify-content-center">
        <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-muted">Home</a></li>
      </ul>
      <p class="text-center text-muted">&copy; @DateTime.Now.Year Sınav Oluşturucu</p>
    </footer>
  </div>

  <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
  <script src="~/lib/jquery/jquery.min.css"></script>
</body>

</html>